<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<welcome-file-list>
    <welcome-file>accueilS</welcome-file>
</welcome-file-list>

<servlet>
    <servlet-name>AccueilServlet</servlet-name>
    <servlet-class>fr.eni.servlets.AccueilServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AccueilServlet</servlet-name>
    <url-pattern>/accueilS</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>SelectionServlet</servlet-name>
    <servlet-class>fr.eni.servlets.SelectionServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>SelectionServlet</servlet-name>
    <url-pattern>/selectionS</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>CollectionServlet</servlet-name>
    <servlet-class>fr.eni.servlets.CollectionServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>CollectionServlet</servlet-name>
    <url-pattern>/collectionS</url-pattern>
</servlet-mapping>

</web-app>